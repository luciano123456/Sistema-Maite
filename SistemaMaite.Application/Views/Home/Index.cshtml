                    </form>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" id="btnGuardarChofer" class="btn btn-primary" onclick="registrarChofer()">Registrar</button>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="modalEdicionZona" tabindex="-1" role="dialog" aria-labelledby="modalEdicionZonaLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header colorEncabezado">
                    <h5 class="modal-title fw-bold" id="modalEdicionZonaLabel">Editar Zona</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>

                <div class="modal-body">
                    <form id="formEditarZona" class="row g-3">
                        <input type="text" id="txtIdZona" hidden readonly>

                        <div class="col-md-6">
                            <label for="txtNombreZona" class="form-label">Nombre (*)</label>
                            <input type="text" class="form-control" id="txtNombreZona" required>
                        </div>

                        <div class="col-md-6">
                            <label for="txtPrecioZona" class="form-label">Precio</label>
                            <input type="text" class="form-control" id="txtPrecioZona">
