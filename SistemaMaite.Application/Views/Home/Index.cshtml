@{
    ViewData["Title"] = "Sistema de Gestion";
    Layout = null;
}

@using Microsoft.Extensions.Configuration

@inject IConfiguration Configuration

@{
    var ambienteTest = Configuration.GetValue<int>("AmbienteTest");
}


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LUfwmPel+Fu+sGprUURlOB3Jv3EE6l/BKrJ8rBN3tOSl2l+3uxGg6XZem8uf6Fdi" crossorigin="anonymous">*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/home.css" rel="stylesheet" />



</head>
<body class="@(ambienteTest == 1 ? "fondo-test" : "")">


    <partial name="~/Views/Shared/Partials/NavbarLogin.cshtml" />

    @if (ambienteTest == 1)
    {
        <div class="marca-agua-svg"></div>
    }

    <div class="container-fluid">

        <div class="row mt-5">
            <!-- Columna del logo -->
            <div class="col-lg-12 mb-5 divLogo">
                <img src="/Imagenes/logo.png" class="img-fluid imageLogo" alt="Logo">
            </div>
        </div>


      
        <div class="row">

            <!-- Columna del menú -->
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row row-cols-md-1 row-cols-lg-6 g-4">

                            
                            <div class="col">
                                <div class="d-flex flex-column align-items-center">
                                    <img src="~/Imagenes/Menu Principal/Clientes.png" class="img-fluid max-img-size" alt="Lista de Clientes" title="Lista de Clientes">
                                    <button type="button" class="btn mt-2 btnMenu" onclick="window.location.href='@Url.Action("Index", "Clientes")'">Lista de Clientes</button>
                                </div>
                            </div>
                            

                               <div class="col">
                                <div class="d-flex flex-column align-items-center">
                                    <img src="~/Imagenes/Menu Principal/Personal.png" class="img-fluid max-img-size" alt="Lista de Personal" title="Lista de Personal">
                                    <button type="button" class="btn mt-2 btnMenu" onclick="window.location.href='@Url.Action("Index", "Personal")'">Lista de Personal</button>
                                </div>
                            </div>

                            <div class="col">
                                <div class="d-flex flex-column align-items-center">
                                    <img src="~/Imagenes/Menu Principal/Usuarios.png" class="img-fluid max-img-size" alt="Lista de Usuarios" title="Lista de Usuarios">
                                    <button type="button" class="btn mt-2 btnMenu" onclick="window.location.href='@Url.Action("Index", "Usuarios")'">Lista de Usuarios</button>
                                </div>
                            </div>


                            <div class="col">
                                <div class="d-flex flex-column align-items-center">
                                    <img src="~/Imagenes/Menu Principal/Productos.png" class="img-fluid max-img-size" alt="Lista de Productos" title="Lista de Productos">
                                    <button type="button" class="btn mt-2 btnMenu" onclick="window.location.href='@Url.Action("Index", "Productos")'">Lista de Productos</button>
                                </div>
                            </div>

                             <div class="col">
                                <div class="d-flex flex-column align-items-center">
                                    <img src="~/Imagenes/Menu Principal/Cajas.png" class="img-fluid max-img-size" alt="Cajas" title="Cajas">
                                    <button type="button" class="btn mt-2 btnMenu" onclick="window.location.href='@Url.Action("Index", "Cajas")'">Cajas</button>
                                </div>
                            </div>

                            <div class="col">
                                <div class="d-flex flex-column align-items-center">
                                    <img src="~/Imagenes/Menu Principal/Gastos.png" class="img-fluid max-img-size" alt="Gastos" title="Gastos">
                                    <button type="button" class="btn mt-2 btnMenu" onclick="window.location.href='@Url.Action("Index", "Gastos")'">Gastos</button>
                                </div>
                            </div>

                            <div class="col">
                                <div class="d-flex flex-column align-items-center">
                                    <img src="~/Imagenes/Menu Principal/Pagos Personal.png" class="img-fluid max-img-size" alt="Sueldos" title="Sueldos">
                                    <button type="button"
                                            class="btn mt-2 btnMenu"
                                            onclick="window.location.href='@Url.Action("Index", "PersonalSueldos")'">
                                        Pagos a Personal
                                    </button>
                                </div>
                            </div>


                            <div class="col">
                                <div class="d-flex flex-column align-items-center">
                                    <img src="~/Imagenes/Menu Principal/Configuraciones.png" class="img-fluid max-img-size" alt="Configuraciones" title="Configuraciones">
                                    <button type="button" class="btn mt-2 btnMenu" onclick="abrirConfiguraciones()">Configuraciones</button>
                                </div>
                            </div>
                            <div class="col">
                                <div class="d-flex flex-column align-items-center">
                                    <img src="~/Imagenes/Menu Principal/Analisis.png" class="img-fluid max-img-size" alt="Analisis de Datos" title="Analisis de Datos">
                                    <button type="button" class="btn mt-2 btnMenu" onclick="errorModal('El analisis de datos no se encuentra disponible en este momento.')">Analisis de Datos</button>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Modal Configuraciones -->
    <div class="modal fade" id="modalConfiguracion" tabindex="-1" aria-labelledby="modalConfiguracionLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content shadow-lg border-0 rounded-3">

                <!-- Encabezado -->
                <div class="modal-header bg-primary text-white rounded-top">
                    <h5 class="modal-title fw-bold" id="modalConfiguracionLabel">
                        <i class="fa fa-cogs me-2"></i>Configuración
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <!-- Lista -->
                <div class="modal-body">
                    <div id="lblListaVacia" class="alert alert-warning text-center py-2 mb-3" hidden></div>

                    <div class="list-container border rounded p-2" style="max-height: 250px; overflow-y: auto;">
                        <div id="configuracion-list">
                            <!-- Lista dinámica -->
                        </div>
                    </div>

                    <!-- Formulario de edición -->
                    <div id="contenedorNombreConfiguracion" class="mt-4" hidden>


                        <label for="txtNombreConfiguracion" class="form-label fw-bold">Nombre</label>
                        <input type="text" class="form-control" id="txtNombreConfiguracion" required>
                        <input type="hidden" id="txtIdConfiguracion">

                        <div id="divConfiguracionCombo" class="mt-2" hidden>
                            <label id="lblConfiguracionCombo" for="cmbConfiguracion" class="form-label fw-bold"></label>
                        <select class="form-select" id="cmbConfiguracion" required>
                                <option value="">Seleccione...</option>
                        </select>
                        </div>

                        <div class="d-flex gap-2 mt-3">
                            <button id="btnRegistrarModificarConfiguracion" class="btn btn-success flex-fill" onclick="guardarCambiosConfiguracion()">
                                <i class="fa fa-save me-1"></i> Guardar cambios
                            </button>
                            <button class="btn btn-outline-secondary flex-fill" onclick="cancelarModificarConfiguracion()">
                                <i class="fa fa-times me-1"></i> Cancelar
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Pie -->
                <div class="modal-footer d-flex justify-content-between">
                    <button id="agregarConfiguracion" class="btn btn-primary" onclick="agregarConfiguracion()">
                        <i class="fa fa-plus me-1"></i> Añadir
                    </button>
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" onclick="abrirConfiguraciones()">
                        <i class="fa fa-times me-1"></i> Cerrar
                    </button>


                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="ModalEdicionConfiguraciones" tabindex="-1" aria-labelledby="ModalEdicionConfiguracionesLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-edicion" role="document">
            <div class="modal-content">
                <div class="modal-header colorEncabezado">
                    <h5 class="modal-title fw-bold" id="ModalEdicionConfiguracionesLabel">Configuraciones</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>

                <div class="modal-body px-4">
                    <!-- Usá gutters en vez de margin-left -->
                    <div class="row gx-2 gy-3">

                        <div class="col-12 col-sm-6 col-lg-3">
                            <div class="d-flex align-items-center btnConfiguraciones" onclick="abrirConfiguracion('Rol','Roles')">
                                <img src="/Imagenes/configuraciones.png" class="imgConfiguraciones me-2" alt="">
                                <span>Roles</span>
                            </div>
                        </div>

                        <div class="col-12 col-sm-6 col-lg-3">
                            <div class="d-flex align-items-center btnConfiguraciones" onclick="abrirConfiguracion('Condicion de IVA','CondicionesIVA')">
                                <img src="/Imagenes/configuraciones.png" class="imgConfiguraciones me-2" alt="">
                                <span>Condiciones IVA</span>
                            </div>
                        </div>

                        <div class="col-12 col-sm-6 col-lg-3">
                            <div class="d-flex align-items-center btnConfiguraciones" onclick="abrirConfiguracion('Lista de Precios','ListasPrecios')">
                                <img src="/Imagenes/configuraciones.png" class="imgConfiguraciones me-2" alt="">
                                <span>Lista de Precios</span>
                            </div>
                        </div>

                        <div class="col-12 col-sm-6 col-lg-3">
                            <div class="d-flex align-items-center btnConfiguraciones" onclick="abrirConfiguracion('Banco','Bancos')">
                                <img src="/Imagenes/configuraciones.png" class="imgConfiguraciones me-2" alt="">
                                <span>Bancos</span>
                            </div>
                        </div>

                        <div class="col-12 col-sm-6 col-lg-3">
                            <div class="d-flex align-items-center btnConfiguraciones" onclick="abrirConfiguracion('Sucursal','Sucursales')">
                                <img src="/Imagenes/configuraciones.png" class="imgConfiguraciones me-2" alt="">
                                <span>Sucursales</span>
                            </div>
                        </div>

                        <div class="col-12 col-sm-6 col-lg-3">
                            <div class="d-flex align-items-center btnConfiguraciones" onclick="abrirConfiguracion('Cuenta','Cuentas')">
                                <img src="/Imagenes/configuraciones.png" class="imgConfiguraciones me-2" alt="">
                                <span>Cuentas</span>
                            </div>
                        </div>

                        <div class="col-12 col-sm-6 col-lg-3">
                            <div class="d-flex align-items-center btnConfiguraciones" onclick="abrirConfiguracion('Color','Colores')">
                                <img src="/Imagenes/configuraciones.png" class="imgConfiguraciones me-2" alt="">
                                <span>Colores</span>
                            </div>
                        </div>

                        <div class="col-12 col-sm-6 col-lg-3">
                            <div class="d-flex align-items-center btnConfiguraciones" onclick="abrirConfiguracion('Personal Puesto','PersonalPuestos')">
                                <img src="/Imagenes/configuraciones.png" class="imgConfiguraciones me-2" alt="">
                                <span>Personal Puestos</span>
                            </div>
                        </div>

                        <div class="col-12 col-sm-6 col-lg-3">
                            <div class="d-flex align-items-center btnConfiguraciones" onclick="abrirConfiguracion('Gastos Categorias','GastosCategorias')">
                                <img src="/Imagenes/configuraciones.png" class="imgConfiguraciones me-2" alt="">
                                <span>Gastos Categorias</span>
                            </div>
                        </div>

                        <div class="col-12 col-sm-6 col-lg-3">
                            <div class="d-flex align-items-center btnConfiguraciones" onclick="abrirConfiguracion('Productos Categorias','ProductosCategoria')">
                                <img src="/Imagenes/configuraciones.png" class="imgConfiguraciones me-2" alt="">
                                <span>Productos Categorias</span>
                            </div>
                        </div>

                        <div class="col-12 col-sm-6 col-lg-3">
                            <div class="d-flex align-items-center btnConfiguraciones" onclick="abrirConfiguracion('Productos Categorias Talles','ProductosCategoriasTalle', 'Productos Categoria', 'ProductosCategoria', 'Categoria')">
                                <img src="/Imagenes/configuraciones.png" class="imgConfiguraciones me-2" alt="">
                                <span>Productos Categorias Talles</span>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btnaccion" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>




    <partial name="~/Views/Utils/Modals.cshtml" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/home.js?v=1.5"></script>
    <script src="~/js/site.js"></script>

</body>
</html>
