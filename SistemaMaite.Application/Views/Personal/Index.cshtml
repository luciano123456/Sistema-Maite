@{
    ViewData["Title"] = "Personal";
}

@section Estilos {

    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />

    <!-- Estilos de botones -->
    <link href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" rel="stylesheet" />

    <!-- Filtros/FixedHeader -->
    <link href="https://cdn.datatables.net/fixedheader/3.2.2/css/fixedHeader.dataTables.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/css/Personal.css" rel="stylesheet" />
}

<div class="container-fluid mt-5">
    <partial name="~/Views/Shared/Partials/BotonMenu.cshtml" />

    <div class="row">
        <div class="col-lg-10">
            <div class="card" style="width: 88%; position: absolute; left: 7vw; border: none;">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>Personal</span>

                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle d-flex align-items-center" type="button" id="dropdownColumnas" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-cog me-2"></i> Config. Columnas
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownColumnas" id="configColumnasMenu">
                        </ul>
                    </div>
                </div>

                <div class="card-body">
                    <table class="display nowrap" id="grd_Personal" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Nombre</th>
                                <th>Teléfono</th>
                                <th>Teléfono Alternativo</th>
                                <th>DNI</th>
                                <th>CUIT</th>
                                <th>Condición IVA</th>
                                <th>Domicilio</th>
                                <th>Provincia</th>
                                <th>Localidad</th>
                                <th>Email</th>
                                <th>Banco</th>
                                <th>Alias</th>
                                <th>CBU</th>
                                <th>Puesto</th>
                                <th>Fecha Ingreso</th>
                                <th>Fecha Retiro</th>
                                <th>Sueldo Mensual</th>
                                <th>Días Laborales</th>
                                <th>Valor Día</th>
                                <th>Hs Laborales</th>
                                <th>Valor Hora</th>
                                <th>Sucursal</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Contenido de DataTable -->
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-end mt-2 mb-4">
                    <a class="btn btn-primary btnnuevo" onclick="nuevoPersonal()">Nuevo</a>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- Modal Edición Personal -->
<div class="modal fade" id="modalEdicion" tabindex="-1" role="dialog" aria-labelledby="modalEdicionLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-edicion" role="document">
        <div class="modal-content">

            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalEdicionLabel">Nuevo Personal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <form id="formPersonal" class="row g-3">
                    <input type="text" id="txtId" hidden>

                    <div class="col-md-3">
                        <label for="txtNombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="txtNombre" required>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div class="col-md-3">
                        <label for="txtTelefono" class="form-label">Teléfono</label>
                        <input type="text" class="form-control" id="txtTelefono">
                    </div>

                    <div class="col-md-3">
                        <label for="txtTelefonoAlternativo" class="form-label">Teléfono Alternativo</label>
                        <input type="text" class="form-control" id="txtTelefonoAlternativo">
                    </div>

                    <div class="col-md-3">
                        <label for="txtDni" class="form-label">DNI</label>
                        <input type="text" class="form-control" id="txtDni">
                    </div>

                    <div class="col-md-3">
                        <label for="txtCuit" class="form-label">CUIT</label>
                        <input type="text" class="form-control" id="txtCuit">
                    </div>

                    <div class="col-md-3">
                        <label for="cmbCondicionIva" class="form-label">Condición IVA</label>
                        <select id="cmbCondicionIva" class="form-control" required>
                            <option value="">Seleccione</option>
                        </select>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div class="col-md-3">
                        <label for="txtDomicilio" class="form-label">Domicilio</label>
                        <input type="text" class="form-control" id="txtDomicilio">
                    </div>

                    <div class="col-md-3">
                        <label for="cmbProvincia" class="form-label">Provincia</label>
                        <select id="cmbProvincia" class="form-control" required>
                            <option value="">Seleccione</option>
                        </select>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div class="col-md-3">
                        <label for="txtLocalidad" class="form-label">Localidad</label>
                        <input type="text" class="form-control" id="txtLocalidad">
                    </div>

                    <div class="col-md-3">
                        <label for="txtEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="txtEmail">
                    </div>

                    <div class="col-md-3">
                        <label for="cmbBanco" class="form-label">Banco</label>
                        <select id="cmbBanco" class="form-control">
                            <option value="">Seleccione</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label for="txtBancoAlias" class="form-label">Alias</label>
                        <input type="text" class="form-control" id="txtBancoAlias">
                    </div>

                    <div class="col-md-3">
                        <label for="txtBancoCbu" class="form-label">CBU</label>
                        <input type="text" class="form-control" id="txtBancoCbu">
                    </div>

                    <div class="col-md-3">
                        <label for="cmbPuesto" class="form-label">Puesto</label>
                        <select id="cmbPuesto" class="form-control" required>
                            <option value="">Seleccione</option>
                        </select>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div class="col-md-3">
                        <label for="dtpFechaIngreso" class="form-label">Fecha Ingreso</label>
                        <input type="date" class="form-control" id="dtpFechaIngreso">
                    </div>

                    <div class="col-md-3">
                        <label for="dtpFechaRetiro" class="form-label">Fecha Retiro</label>
                        <input type="date" class="form-control" id="dtpFechaRetiro">
                    </div>

                    <div class="col-md-3">
                        <label for="numSueldoMensual" class="form-label">Sueldo Mensual</label>
                        <input type="text" step="0.01" class="form-control Inputmiles" id="numSueldoMensual">
                    </div>

                    <div class="col-md-3">
                        <label for="numDiasLaborales" class="form-label">Días Laborales</label>
                        <input type="number" step="0.01" class="form-control" id="numDiasLaborales">
                    </div>

                    <div class="col-md-3">
                        <label for="numValorDia" class="form-label">Valor Día</label>
                        <input type="text" step="0.01" class="form-control Inputmiles" id="numValorDia">
                    </div>

                    <div class="col-md-3">
                        <label for="numHsLaborales" class="form-label">Hs Laborales</label>
                        <input type="text" step="0.01" class="form-control" id="numHsLaborales">
                    </div>

                    <div class="col-md-3">
                        <label for="numValorHora" class="form-label">Valor Hora</label>
                        <input type="text" step="0.01" class="form-control Inputmiles" id="numValorHora">
                    </div>

                    <div class="col-md-3">
                        <label for="cmbSucursal" class="form-label">Sucursal</label>
                        <select id="cmbSucursal" class="form-control" required>
                            <option value="">Seleccione</option>
                        </select>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div id="errorCampos" class="alert alert-danger d-none col-12">
                        Debes completar los campos obligatorios.
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fa fa-arrow-left"></i> Volver
                </button>
                <button type="button" id="btnGuardarPersonal" class="btn btn-primary" onclick="guardarCambiosPersonal()">
                    <i class="fa fa-check"></i> Registrar
                </button>
            </div>

        </div>
    </div>
</div>

<partial name="~/Views/Utils/Modals.cshtml" />

@section Scripts {


    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

@*SCRIPTS DE BOTONES*@
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js">

    </script><script src="~/js/site.js"></script>
    <script src="~/js/utils/moment.js"></script>

@*excel*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>

@*pdf*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>

@*imprimir*@
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>

@*filter columns*@
    <script src="https://cdn.datatables.net/fixedheader/3.2.2/js/dataTables.fixedHeader.min.js"></script>


    <!-- Página Personal -->
    <script src="~/js/Personal.js?v=1.4"></script>
}
