@{
    ViewData["Title"] = "Home Page";
}


@*GOOGLEAR CARD BOOTSTRAP 5*@
@section Estilos {

    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />

@*ESTILOS DE BOTONES*@
    <link href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" rel="stylesheet" />

@*filter columns*@
    <link href="https://cdn.datatables.net/fixedheader/3.2.2/css/fixedHeader.dataTables.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/css/usuarios.css" rel="stylesheet" />

}

<div class="container-fluid mt-5">
    <partial name="~/Views/Shared/Partials/BotonMenu.cshtml" />
    <div class="row">
        <div class="col-lg-10">
            <div class="card" style="width: 88%; position: absolute; left: 7vw; border: none;">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>Productos</span>

                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle d-flex align-items-center" type="button" id="dropdownColumnas" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-cog me-2"></i> Config. Columnas
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownColumnas" id="configColumnasMenu"></ul>
                    </div>
                </div>

                <div class="card-body">
                    <table class="display nowrap" id="grd_Productos" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>                <!-- Acciones -->
                                <th>Descripción</th>     <!-- 1 -->
                                <th>Categoría</th>       <!-- 2 -->
                                <th>Precio</th>          <!-- 3 -->
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-end mt-2 mb-4">
                    <a class="btn btn-primary btnnuevo" onclick="nuevoProducto()">Nuevo</a>
                </div>
            </div>
        </div>
    </div>
</div>




<div class="modal fade" id="modalEdicion" tabindex="-1" aria-labelledby="modalEdicionLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">

            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalEdicionLabel">Nuevo Producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <form id="formProducto" class="row g-3">
                    <input type="text" id="txtId" hidden>

                    <div class="col-md-6">
                        <label for="txtNombre" class="form-label">Descripción</label>
                        <input type="text" class="form-control" id="txtNombre" required>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div class="col-md-3">
                        <label for="cmbCategoria" class="form-label">Categoría</label>
                        <select id="cmbCategoria" class="form-select" required>
                            <option value="">Seleccione</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label for="txtPrecio" class="form-label">Precio Unitario</label>
                        <input type="number" step="0.01" class="form-control" id="txtPrecio" required>
                    </div>


                    <!-- TALLES -->
                    <div class="col-md-6 position-relative">
                        <label class="form-label">Talles</label>
                        <div id="btnTalles" class="form-select text-truncate" style="cursor:pointer" tabindex="0"
                             onclick="toggleChecklist('btnTalles','listaTalles')">
                            Seleccionar talles
                        </div>

                        <div id="listaTalles" class="select-checklist shadow p-2 d-none">
                            <!-- Se renderiza por JS -->
                        </div>
                        <small class="text-muted">Podés seleccionar múltiples talles</small>
                    </div>

                    <!-- COLORES -->
                    <div class="col-md-6 position-relative">
                        <label class="form-label">Colores</label>
                        <div id="btnColores" class="form-select text-truncate" style="cursor:pointer" tabindex="0"
                             onclick="toggleChecklist('btnColores','listaColores')">
                            Seleccionar colores
                        </div>

                        <div id="listaColores" class="select-checklist shadow p-2 d-none">
                            <!-- Se renderiza por JS -->
                        </div>
                        <small class="text-muted">Podés seleccionar múltiples colores</small>
                    </div>

                    
                    <div class="col-12">
                        <label class="form-label">Precios por lista</label>
                        <div id="wrapPreciosListas" class="row g-2"></div>
                    </div>


                    <div class="col-12 form-check mt-2" hidden>
                        <input class="form-check-input" type="checkbox" id="chkVariantes" checked>
                        <label class="form-check-label" for="chkVariantes">
                            Generar variantes (combinaciones Talle × Color)
                        </label>
                    </div>



                    <div id="errorCampos" class="alert alert-danger d-none col-12">
                        Debes completar los campos obligatorios.
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fa fa-arrow-left"></i> Volver
                </button>
                <button type="button" id="btnGuardar" class="btn btn-primary" onclick="guardarCambios()">
                    <i class="fa fa-check"></i> Registrar
                </button>
            </div>

        </div>
    </div>
</div>

<partial name="~/Views/Utils/Modals.cshtml" />

@section Scripts {

    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

@*SCRIPTS DE BOTONES*@
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js">

    </script><script src="~/js/site.js"></script>

@*excel*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>

@*pdf*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>

@*imprimir*@
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>

@*filter columns*@
    <script src="https://cdn.datatables.net/fixedheader/3.2.2/js/dataTables.fixedHeader.min.js"></script>


    <script src="~/js/Productos.js?v=1.1"></script>

}