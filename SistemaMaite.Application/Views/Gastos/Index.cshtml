@{
    ViewData["Title"] = "Gastos";
}

@section Estilos {
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/fixedheader/3.2.2/css/fixedHeader.dataTables.min.css" />
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
}

<div class="container page-99" style="margin-top: 100px">
    <!-- Header estilo Personal -->
    <div class="cc-header shadow-lg rounded-4 p-4 mb-4">
        <div class="d-flex align-items-center gap-3 flex-wrap">
            <div class="d-flex align-items-center gap-3">
                <span class="cc-badge"><i class="fa fa-credit-card"></i></span>
                <div>
                    <h2 class="m-0 fw-800">Gastos</h2>
                    <small class="text-muted-cc">Gestión y control de gastos</small>
                </div>
            </div>

            <div class="ms-auto d-flex gap-3 flex-wrap">
                <div class="cc-stat">
                    <div class="label">Suma de gastos (período)</div>
                    <div class="value kpi-azul" id="kpiTotalGastos">$0,00</div>
                </div>
                <div class="cc-stat">
                    <div class="label">Cantidad de gastos</div>
                    <div class="value" id="kpiCantGastos">0</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenido -->
    <div class="row g-4">
        <div class="col-12">
            <div class="card-glass p-3">
                <div class="tabla-wrap position-relative">
                    <!-- Acciones superiores -->
                    <div class="tabla-controls-top d-flex gap-2">
                        <button class="btn btn-outline-primary d-flex align-items-center" type="button" id="btnToggleFiltros">
                            <i class="fa fa-arrow-up me-2" id="iconFiltros"></i> Filtros
                        </button>

                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle d-flex align-items-center" type="button" id="btnConfigCols"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-cog me-2"></i> Config. Columnas
                            </button>
                            <ul class="dropdown-menu" id="configColumnasMenu" aria-labelledby="btnConfigCols"></ul>
                        </div>
                    </div>

                    <!-- Panel de filtros -->
                    <form id="formFiltros" class="filter-bar shadow-sm rounded-3 mb-3 p-3 d-none">
                        <div class="row g-2 align-items-end">
                            <div class="col-6 col-md-3">
                                <label class="form-label">Desde</label>
                                <input type="date" id="fltDesde" class="form-control">
                            </div>
                            <div class="col-6 col-md-3">
                                <label class="form-label">Hasta</label>
                                <input type="date" id="fltHasta" class="form-control">
                            </div>
                            <div class="col-6 col-md-2">
                                <label class="form-label">Categoría</label>
                                <select id="fltCategoria" class="form-select">
                                    <option value="">Todas</option>
                                </select>
                            </div>
                            <div class="col-6 col-md-2">
                                <label class="form-label">Sucursal</label>
                                <select id="fltSucursal" class="form-select">
                                    <option value="">Todas</option>
                                </select>
                            </div>
                            <div class="col-6 col-md-2">
                                <label class="form-label">Cuenta</label>
                                <select id="fltCuenta" class="form-select">
                                    <option value="">Todas</option>
                                </select>
                            </div>
                            <div class="col-12 col-md-4">
                                <label class="form-label">Concepto</label>
                                <input type="text" id="fltConcepto" class="form-control" placeholder="Contiene...">
                            </div>
                            <div class="col-12 col-md-4 d-flex gap-2 mt-2 mt-md-0">
                                <button type="button" id="btnBuscar" class="btn btn-primary flex-fill">
                                    <i class="fa fa-search me-1"></i> Buscar
                                </button>
                                <button type="button" id="btnLimpiar" class="btn btn-outline-secondary">
                                    <i class="fa fa-eraser me-1"></i> Limpiar
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Tabla -->
                    <div class="dt-dark-wrap">
                        <table class="dt-dark display nowrap compact" id="grd_Gastos" style="width:100%">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Fecha</th>
                                    <th>Concepto</th>
                                    <th>Importe</th>
                                    <th>Sucursal</th>
                                    <th>Categoría</th>
                                    <th>Cuenta</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                    <!-- Botonera inferior -->
                    <div class="d-flex align-items-center justify-content-end mt-3">
                        <button class="btn btn-success d-flex align-items-center px-3 py-2 text-center" onclick="nuevoGasto()">
                            <i class="fa fa-plus-square me-2"></i> Nuevo Gasto
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Crear/Editar -->
<div class="modal fade" id="modalEdicion" tabindex="-1" role="dialog" aria-labelledby="modalEdicionLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-edicion" role="document">
        <div class="modal-content">
            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalEdicionLabel">Nuevo Gasto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <form id="formGasto" class="row g-3">
                    <input type="text" id="txtId" hidden>

                    <div class="col-md-3">
                        <label for="dtpFecha" class="form-label">Fecha</label>
                        <input type="date" class="form-control" id="dtpFecha" required>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div class="col-md-6">
                        <label for="txtConcepto" class="form-label">Concepto</label>
                        <input type="text" class="form-control" id="txtConcepto" required>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div class="col-md-3">
                        <label for="txtImporte" class="form-label">Importe</label>
                        <input type="text" class="form-control Inputmiles" id="txtImporte" required>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div class="col-md-3">
                        <label for="cmbSucursal" class="form-label">Sucursal</label>
                        <select id="cmbSucursal" class="form-control" required>
                            <option value="">Seleccione</option>
                        </select>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div class="col-md-3">
                        <label for="cmbCategoria" class="form-label">Categoría</label>
                        <select id="cmbCategoria" class="form-control" required>
                            <option value="">Seleccione</option>
                        </select>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div class="col-md-3">
                        <label for="cmbCuenta" class="form-label">Cuenta</label>
                        <select id="cmbCuenta" class="form-control" required>
                            <option value="">Seleccione</option>
                        </select>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div id="errorCampos" class="alert alert-danger d-none col-12">
                        Debes completar los campos obligatorios.
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fa fa-arrow-left"></i> Volver
                </button>
                <button type="button" id="btnGuardar" class="btn btn-primary" onclick="guardarCambios()">
                    <i class="fa fa-check"></i> Registrar
                </button>
            </div>
        </div>
    </div>
</div>

<partial name="~/Views/Utils/Modals.cshtml" />

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/3.2.2/js/dataTables.fixedHeader.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>

    <!-- Botones -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>

    <!-- utilidades del proyecto -->
    <script src="~/js/site.js"></script>
    <script src="~/js/utils/moment.js"></script>

    <!-- lógica Gastos -->
    <script src="~/js/Gastos.js?v=2.2"></script>
}
