@{
    ViewData["Title"] = "Pagos Sueldos";
}

@section Estilos {
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/fixedheader/3.2.2/css/fixedHeader.dataTables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/css/usuarios.css" rel="stylesheet" />
}

<div class="container-fluid mt-5">
    <partial name="~/Views/Shared/Partials/BotonMenu.cshtml" />
    <div class="row">
        <div class="col-lg-10">
            <div class="card" style="width: 88%; position: absolute; left: 7vw; border: none;">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>Pago a personal</span>

                    <div class="d-flex align-items-center gap-2">
                        <button class="btn btn-outline-primary d-flex align-items-center" type="button" id="btnToggleFiltros">
                            <i class="fa fa-arrow-up me-2" id="iconFiltros"></i> Filtros
                        </button>

                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle d-flex align-items-center" type="button" id="dropdownColumnas" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-cog me-2"></i> Config. Columnas
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownColumnas" id="configColumnasMenu"></ul>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Filtros -->
                    <form id="formFiltros" class="filter-bar shadow-sm rounded-3 mb-3 p-3 d-none">
                        <div class="row g-2 align-items-end">

                            <div class="col-6 col-md-3">
                                <label class="form-label">Desde</label>
                                <input type="date" id="fltDesde" class="form-control">
                            </div>

                            <div class="col-6 col-md-3">
                                <label class="form-label">Hasta</label>
                                <input type="date" id="fltHasta" class="form-control">
                            </div>

                            <div class="col-6 col-md-3">
                                <label class="form-label">Personal</label>
                                <select id="fltPersonal" class="form-select">
                                    <option value="">Todos</option>
                                </select>
                            </div>

                            <div class="col-6 col-md-3">
                                <label class="form-label">Estado</label>
                                <select id="fltEstado" class="form-select">
                                    <option value="">Todos</option>
                                    <option value="CON_SALDO">Con saldo</option>
                                    <option value="SALDADO">Saldado</option>
                                </select>
                            </div>

                            <div class="col-12 col-md-6">
                                <label class="form-label">Concepto</label>
                                <input type="text" id="fltConcepto" class="form-control" placeholder="Contiene...">
                            </div>

                            <div class="col-12 col-md-4 d-flex gap-2 mt-2 mt-md-0">
                                <button type="button" id="btnBuscar" class="btn btn-primary flex-fill">
                                    <i class="fa fa-search me-1"></i> Buscar
                                </button>
                                <button type="button" id="btnLimpiar" class="btn btn-outline-secondary">
                                    <i class="fa fa-eraser me-1"></i> Limpiar
                                </button>
                            </div>
                        </div>
                    </form>

                    <table class="display nowrap" id="grd_Sueldos" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Fecha</th>
                                <th>Personal</th>
                                <th>Concepto</th>
                                <th>Importe</th>
                                <th>Abonado</th>
                                <th>Saldo</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

                <div class="totales-botones-container mb-4">
                    <div class="grupo-totales">
                        <div class="form-group mb-0">
                            <label class="form-label fw-bold">Suma Importe</label>
                            <input type="text" class="form-control form-control-sm text-start" id="txtTotalImporte" readonly>
                        </div>
                        <div class="form-group mb-0">
                            <label class="form-label fw-bold">Suma Abonado</label>
                            <input type="text" class="form-control form-control-sm text-start" id="txtTotalAbonado" readonly>
                        </div>
                        <div class="form-group mb-0">
                            <label class="form-label fw-bold">Suma Saldo</label>
                            <input type="text" class="form-control form-control-sm text-start" id="txtTotalSaldo" readonly>
                        </div>
                    </div>

                    <div class="grupo-botones ">
                        <button class="btn btn-success d-flex align-items-center px-3 py-2 text-center" onclick="nuevoSueldo()">
                            <i class="fa fa-plus-square"></i> Nuevo Sueldo
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<partial name="~/Views/Utils/Modals.cshtml" />

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="~/js/site.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>

    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/3.2.2/js/dataTables.fixedHeader.min.js"></script>
    <script src="~/js/utils/moment.js"></script>
    <script src="~/js/PagosSueldos.js?v=1.0"></script>
}
